<Window x:Class="LibraryManageSystem.UpdatePW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageSystem"
        mc:Ignorable="d"
        Title="修改密码" Height="250" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Resources/pw.png">
    <Grid>
        <Label Content="新的密码" HorizontalAlignment="Center" Margin="-160,50,0,0" VerticalAlignment="Top"/>
        <Label Content="确认密码" HorizontalAlignment="Center" Margin="-160,100,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pw1" HorizontalAlignment="Center" Margin="70,50,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pw2" HorizontalAlignment="Center" Margin="70,100,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="确认" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Cursor="Hand" Click="Button_Click"/>

    </Grid>
</Window>
