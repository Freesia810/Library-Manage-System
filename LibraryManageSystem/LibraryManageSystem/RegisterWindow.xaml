<Window x:Class="LibraryManageSystem.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageSystem"
        mc:Ignorable="d"
        Title="新用户注册" Height="300" Width="250" WindowStartupLocation="CenterScreen" Icon="/Resources/reg.png">
    <Grid>
        <Label Content="借书卡编号" HorizontalAlignment="Center" Margin="-160,50,0,0" VerticalAlignment="Top"/>
        <Label Content="密码" HorizontalAlignment="Center" Margin="-160,100,0,0" VerticalAlignment="Top"/>
        <Label Content="确认密码" HorizontalAlignment="Center" Margin="-160,150,0,0" VerticalAlignment="Top"/>


        <TextBox x:Name="idBox" HorizontalAlignment="Center" Margin="70,50,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pw" HorizontalAlignment="Center" Margin="70,100,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pw2" HorizontalAlignment="Center" Margin="70,150,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="确认" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Cursor="Hand" Click="Button_Click"/>
    </Grid>
</Window>
