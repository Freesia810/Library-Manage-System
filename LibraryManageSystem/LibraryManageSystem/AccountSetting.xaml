<UserControl x:Class="LibraryManageSystem.AccountSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManageSystem"
             mc:Ignorable="d" >
    <ScrollViewer>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="500">
            <Label Content="账户设置" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Height="40" Width="105" FontSize="24" FontWeight="Bold"/>
            <Label x:Name="idL" Content="用户ID：" HorizontalAlignment="Center" Margin="-0,150,0,0" VerticalAlignment="Top" Height="39"/>
            <Label x:Name="typeL" Content="用户身份：" HorizontalAlignment="Center" Margin="-0,180,0,0" VerticalAlignment="Top" Height="39"/>
            
            <Button Content="修改密码" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Cursor="Hand" Click="Button_Click"/>
        </Grid>
    </ScrollViewer>
</UserControl>
