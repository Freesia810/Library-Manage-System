<UserControl x:Class="LibraryManageSystem.UserControlReaderInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManageSystem"
             mc:Ignorable="d" >
    <Grid>
        <DataGrid x:Name="DataGridReader" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Height="auto" Width="auto" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="编号"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="姓名"/>
                <DataGridTextColumn Binding="{Binding Depart}" Header="部门"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="类别"/>
                <DataGridTextColumn Binding="{Binding Num}" Header="借阅数量"/>
                <DataGridTextColumn Binding="{Binding Credit}" Header="信用分数"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
